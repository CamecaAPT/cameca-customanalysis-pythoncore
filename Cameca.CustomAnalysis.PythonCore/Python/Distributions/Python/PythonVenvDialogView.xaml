<UserControl x:Class="Cameca.CustomAnalysis.PythonCore.PythonVenvDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cameca.CustomAnalysis.PythonCore"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type local:PythonVenvDialogViewModel}}">
    <UserControl.Resources>
        <local:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="Title" Value="{Binding Title}"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid Width="800" Height="650">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="FontFamily" Value="Consolas" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
        </Grid.Resources>

        <TextBox Grid.Row="0"
                 Text="{Binding CmdStatementText, Mode=OneWay}"
                 Style="{StaticResource TextBoxStyle}" />


        <UniformGrid Grid.Row="1"
                     HorizontalAlignment="Center"
                     Columns="3">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Width" Value="80" />
                    <Setter Property="Padding" Value="5" />
                </Style>
            </UniformGrid.Resources>
            <Button Content="Create" Command="{Binding RunCommand}" />
            <Button Content="Delete" Command="{Binding DeleteCommand}" />
            <Button Content="Cancel" Command="{Binding RunCancelCommand}" />
        </UniformGrid>

        <TextBlock Grid.Row="2">
            Creating the virtual environment might take some time. Please be patient and wait for the success message.
        </TextBlock>

        <local:AppendingTextBox Grid.Row="3"
                                ItemsSource="{Binding TextContent}"
                                Style="{StaticResource TextBoxStyle}"
                                AppendScrollBehavior="FollowBottom" />

        <UniformGrid Grid.Row="4"
                     HorizontalAlignment="Right">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Width" Value="80" />
                    <Setter Property="Padding" Value="5" />
                </Style>
            </UniformGrid.Resources>
            <Button Content="OK" Command="{Binding OkCommand}" IsEnabled="{Binding RunCommand.IsRunning, Converter={StaticResource InvertBooleanConverter}}" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" />
        </UniformGrid>
    </Grid>
</UserControl>
